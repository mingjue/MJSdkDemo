<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.44px"
        android:visibility="gone"
        android:background="#DADFE6" />

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="286px"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:padding="28px">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="230px"
            android:layout_height="230px"
            android:background="@drawable/shape_img_bg"
            android:padding="2px"
           />


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="23px"
            android:layout_marginTop="15px"
            android:layout_toRightOf="@id/item_img"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="前大灯总成（右）"
                android:textColor="#303233"
                android:textSize="40px" />
            
            <TextView
                android:id="@+id/tv_oe"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="48px"
                android:gravity="center_vertical"
                />
            
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="48px"
                android:gravity="center_vertical"
                />

        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="20px"
            android:layout_height="34px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14px"
            android:src="@drawable/icon_gray_detail_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.44px"
        android:visibility="gone"
        android:background="#DADFE6" />

    <View
        android:id="@+id/item_divider_view"
        android:layout_width="match_parent"
        android:layout_height="28.8px"
        android:background="#EFF0F3" />
</LinearLayout>