<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@drawable/edittext_search_white"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_width="match_parent"
        android:layout_height="172.8px"
        android:layout_marginTop="57.6px"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        
        <EditText
            android:id="@+id/pic_word"
            android:padding="10px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:scrollHorizontally="true"
            android:layout_margin="1dp"
            android:hint="输入配件名称"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/edittext_hint_color"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="43.2px" />
        
        <ImageView
            android:id="@+id/img_clear"
            android:layout_width="68px"
            android:layout_height="68px"
            android:layout_gravity="center_vertical"
            android:src="@drawable/clear"
            android:visibility="gone" />
        <View
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:background="@color/themecolor"/>
        
        <ImageView
            android:id="@+id/pic_voice"
            android:layout_width="114px"
            android:layout_height="match_parent"
            android:padding="24px"
            android:scaleType="fitCenter"
            android:src="@drawable/yuyinicon" />
    </com.zhy.autolayout.AutoLinearLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_partlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</com.zhy.autolayout.AutoLinearLayout>
