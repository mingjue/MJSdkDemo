<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F3"
    android:orientation="vertical">
    
    
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/content_rl"
        android:layout_width="match_parent"
        android:layout_height="194.4px"
        android:background="@color/white"
        android:paddingLeft="14.4px"
        android:paddingRight="14.4px"
        android:paddingTop="14.4px">
        
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/solid_white_stroke_theme_corner_7dp_shape"
            android:paddingLeft="15px"
            android:paddingRight="15px">
            
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                
                <TextView
                    android:id="@+id/tv_partname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15px"
                    android:textColor="#797C80"
                    android:textSize="34.56px" />
                
                <TextView
                    android:id="@+id/tv_oe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_partname"
                    android:textColor="@color/black"
                    android:textSize="34.56px" />
                
                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#797C80"
                    android:textSize="34.56px" />
                
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_oe"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="34.56px" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="28.8px"
            android:layout_marginBottom="28.8px">
            <com.dataenlighten.aimjsdk.demo.custom.ZoomImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:transitionName="shareNames" />
        
        </com.zhy.autolayout.AutoRelativeLayout>
        
        
        <View
            android:layout_width="match_parent"
            android:layout_height="28.8px"
            android:background="#EFF0F3" />
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_deatil"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:scrollbars="vertical"/>
        
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>